<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.broomelliboys.broomelliboys.broomelliboys.PizzaSize">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16&quot; Large"
            android:layout_gravity="center_horizontal"
            android:onClick="goToPizzaToppingsLarge"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14&quot; Medium"
            android:layout_gravity="center_horizontal"
            android:onClick="goToPizzaToppingsMedium"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10&quot; Gluten-free*"
            android:layout_gravity="center_horizontal"
            android:onClick="goToPizzaToppingsGluten"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flatbread"
            android:layout_gravity="center_horizontal"
            android:onClick="goToPizzaToppingsFlatbread"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="slice"
            android:layout_gravity="center_horizontal"
            android:onClick="goToPizzaToppingsSlice"/>

    </LinearLayout>

</ScrollView>
