<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.broomelliboys.broomelliboys.broomelliboys">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/broomellis_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Menu" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".Meals" />
        <activity android:name=".Pizza" />
        <activity android:name=".PizzaSize" />
        <activity android:name=".PizzaToppings" />
        <activity android:name=".PizzaToppingsList" />
        <activity android:name=".PizzaToppingsItem" />
        <activity android:name=".Sides" />
        <activity android:name=".BreadStyx" />
        <activity android:name=".ItemList" />
        <activity android:name=".ListItem"></activity>
    </application>

</manifest>